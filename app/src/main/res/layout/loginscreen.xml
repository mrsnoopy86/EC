<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/loginscreen">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:id="@+id/imageView10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:background="#92000000" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/textView11"
        android:layout_below="@+id/ivLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/md_white_1000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:shadowColor="@color/md_black_1000"
        android:shadowRadius="10"
        android:shadowDx="5"
        android:shadowDy="10"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/button_log_in_screen"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:background="#ff98192a"
        android:text="Log In"
        android:textColor="@android:color/white"
        android:onClick="onLogIn"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/button_sing_up_screen"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:background="#ff98192a"
        android:text="Sing Up"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do"
        android:id="@+id/tvAbout"
        android:layout_alignTop="@+id/imageView10"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/open_social"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_button_slider"
        android:visibility="visible"
        android:onClick="onOpenSocial"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button_ask_question"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_button_slider"
        android:rotation="180"
        android:visibility="visible"
        android:onClick="onOpenAskQuestion"/>

    <LinearLayout
        android:id="@+id/ask_question"
        android:layout_width="250dp"
        android:layout_height="225dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:background="#ff000000"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask Us"
            android:textSize="18sp"
            android:id="@+id/textView10"
            android:textColor="#ffffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editText5"
            android:background="#ffffffff"
            android:hint="Email" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:id="@+id/editText6"
            android:layout_gravity="center_horizontal"
            android:hint="Question"
            android:background="#ffffffff"
            android:layout_marginTop="5dp"
            android:gravity="top" />

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="Ask"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffffff"
            android:layout_marginTop="5dp"
            android:background="#ff98192a"/>
    </LinearLayout>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_vk_button"
        android:id="@+id/vk_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_facebook_button"
        android:id="@+id/facebook_button"
        android:layout_below="@+id/vk_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_linkedin_button"
        android:id="@+id/linkedin_button"
        android:layout_below="@+id/facebook_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_twitter_button"
        android:id="@+id/twitter_button"
        android:layout_below="@+id/linkedin_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_instagram_button"
        android:id="@+id/instagram_button"
        android:layout_below="@+id/twitter_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/ic_youtube_button"
        android:id="@+id/youtube_button"
        android:layout_below="@+id/instagram_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="gone"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/et_login"
        android:layout_alignTop="@+id/imageView10"
        android:layout_toRightOf="@+id/button_log_in_screen"
        android:layout_toEndOf="@+id/button_log_in_screen"
        android:background="#ffffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint=" Login"
        android:visibility="gone"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_password"
        android:layout_below="@+id/et_login"
        android:layout_alignLeft="@+id/et_login"
        android:layout_alignStart="@+id/et_login"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:hint=" Password"
        android:visibility="gone"/>

    <Button
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:id="@+id/button_log_second_in"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#ff98192a"
        android:text="Log In"
        android:textColor="@android:color/white"
        android:visibility="gone"/>

</RelativeLayout>